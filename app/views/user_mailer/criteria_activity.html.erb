<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
  </head>
  <body>


    <% @user.criteria_activities.each do |criteria_activity| %>
      <% if criteria_activity.status == false %>
        <p> License Title : <%= html_escape(criteria_activity.liquor_license.title) %> <p/>
        <p> State : <%=  criteria_activity.liquor_license.state_id ?  GeoinfoState.find(criteria_activity.liquor_license.state_id).name : ''%> <p/>
        <p>  City : <%=  criteria_activity.liquor_license.city_id ? GeoinfoCity.find(criteria_activity.liquor_license.city_id).name : ''  %><p/>
        <p> License Type : <%=  criteria_activity.liquor_license.license_type ? criteria_activity.liquor_license.license_type.license_code + '-' + criteria_activity.liquor_license.license_type.description : '' %><p/>
        <p> Price : <%= criteria_activity.liquor_license.price %> <p/>
        <%
        criteria_activity.status = true
        criteria_activity.save()
      %>
        <p> ------------ </p>
      <% end %>
    <% end %>

  </body>
</html>